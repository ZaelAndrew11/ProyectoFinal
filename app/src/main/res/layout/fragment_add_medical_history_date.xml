<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        tools:context="cl.aguzman.proyectofinal.views.pets.AddMedicalHistoryDateDialogFragment">

        <TextView
            android:text="Nuevo Registro"
            android:textAlignment="center"
            android:textSize="@dimen/text20"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/select_date"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <DatePicker
            android:id="@+id/dateHmDp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/descriptionHmEt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/margin_5"
            android:gravity="top"
            android:background="@drawable/edittext_style"
            android:hint="@string/description_medical_hit" />

        <Button
            android:id="@+id/addMedicalHistoryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_5"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_style"
            android:text="@string/ok" />

    </LinearLayout>
</ScrollView>