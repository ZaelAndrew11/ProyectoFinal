<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="cl.aguzman.proyectofinal.views.main.UploadVetActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        tools:context="cl.aguzman.proyectofinal.views.main.UploadVetFragment">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/logoVetIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/colorWhite" />

            <Button
                android:id="@+id/camPlusBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_add_a_photo_black_36dp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/nameVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/edittext_style"
            android:hint="@string/name_vet"
            android:inputType="text" />


        <TextView
            android:text="@string/example_rut"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/rutVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/edittext_style"
            android:hint="@string/rut_vet"
            android:inputType="text" />

        <EditText
            android:id="@+id/emailVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/edittext_style"
            android:hint="@string/email_vet"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/addressVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_style"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:hint="@string/adress_vet"
            android:inputType="textPostalAddress" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/communeVetEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@drawable/edittext_style"
                android:inputType="text"
                android:hint="@string/commune"/>

            <EditText
                android:id="@+id/cityVetEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_5"
                android:background="@drawable/edittext_style"
                android:inputType="text"
                android:hint="@string/city"/>

        </LinearLayout>

        <TextView
            android:text="@string/example_phone"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/phoneVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/edittext_style"
            android:hint="@string/phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/descriptionVetEt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/edittext_style"
            android:gravity="top"
            android:hint="@string/description_vet"
            android:inputType="text" />

        <Button
            android:id="@+id/uploadDataVetbtn"
            android:drawableLeft="@mipmap/ic_send_white_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="@string/button_upload_vet"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</ScrollView>

