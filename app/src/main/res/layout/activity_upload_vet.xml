<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="cl.aguzman.proyectofinal.views.main.UploadVetActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        tools:context="cl.aguzman.proyectofinal.views.main.UploadVetFragment">

        <ImageView
            android:id="@+id/logoVetIv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:background="@color/black_overlay"
            android:src="@mipmap/ic_add_a_photo_black_36dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <EditText
            android:id="@+id/nameVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:inputType="text"
            android:hint="@string/name_vet" />

        <EditText
            android:id="@+id/rutVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:inputType="text"
            android:hint="@string/rut_vet"/>

        <EditText
            android:id="@+id/emailVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:inputType="textEmailAddress"
            android:hint="@string/email_vet" />

        <EditText
            android:id="@+id/addressVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:inputType="textPostalAddress"
            android:hint="@string/adress_vet" />

        <EditText
            android:id="@+id/phoneVetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:inputType="phone"
            android:hint="@string/phone_vet" />

        <EditText
            android:id="@+id/descriptionVetEt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="@string/description_vet"
            android:gravity="top"
            android:inputType="text" />

        <Button
            android:id="@+id/uploadDataVetbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_upload_vet" />

    </LinearLayout>
</ScrollView>

