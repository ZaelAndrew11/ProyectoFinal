<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        tools:context="cl.aguzman.proyectofinal.views.login.EndRegisterActivity">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/profileImageIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="@dimen/margin_5" />

        <EditText
            android:id="@+id/nameProfileEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/edittext_style"
            android:hint="@string/name" />

        <EditText
            android:id="@+id/emailProfileEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/edittext_style"
            android:hint="@string/email" />

        <TextView
            android:text="@string/example_phone"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/phoneProfileEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/edittext_style"
            android:hint="@string/phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/adressProfileEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/edittext_style"
            android:hint="@string/direccion" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/communeProfileEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@drawable/edittext_style"
                android:hint="@string/commune"
                android:inputType="text" />

            <EditText
                android:id="@+id/cityProfileEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@drawable/edittext_style"
                android:hint="@string/city"
                android:inputType="text" />

        </LinearLayout>

        <Button
            android:id="@+id/sendProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/button_style"
            android:text="FINALIZAR REGISTRO"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</ScrollView>